{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "resolveJsonModule": true,
    "allowJs": true,
    "checkJs": true,
    "isolatedModules": true,
    "moduleDetection": "force",

    "paths": {
      "$background/*": ["./src/background/*"],
      "$content/*": ["./src/content/*"],
      "$/*": ["./src/*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.js"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
